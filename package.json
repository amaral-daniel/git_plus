{
  "name": "git-plus",
  "displayName": "Git Plus",
  "description": "A minimalist git extension for VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "git-plus",
          "title": "Git Plus",
          "icon": "$(git-branch)"
        }
      ]
    },
    "views": {
      "git-plus": [
        {
          "id": "gitPlusBranchView",
          "name": "Branches",
          "type": "tree"
        },
        {
          "id": "gitPlusGraphView",
          "name": "Tree",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "git-plus.refreshBranches",
          "when": "view == gitPlusBranchView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "git-plus.checkoutBranch",
          "when": "view == gitPlusBranchView && viewItem == local-branch"
        },
        {
          "command": "git-plus.deleteBranch",
          "when": "view == gitPlusBranchView && viewItem == local-branch"
        },
        {
          "command": "git-plus.createBranch",
          "when": "view == gitPlusBranchView && (viewItem == local-branch || viewItem == local-branch-head || viewItem == remote-branch)"
        },
        {
          "command": "git-plus.rebaseBranch",
          "when": "view == gitPlusBranchView && (viewItem == local-branch || viewItem == remote-branch)"
        },
        {
          "command": "git-plus.mergeBranch",
          "when": "view == gitPlusBranchView && (viewItem == local-branch || viewItem == remote-branch)"
        }
      ]
    },
    "commands": [
      {
        "command": "git-plus.showGraph",
        "title": "Git Plus: Show Graph",
        "category": "Git Plus"
      },
      {
        "command": "git-plus.editCommitMessage",
        "title": "Git Plus: Edit Commit Message",
        "category": "Git Plus"
      },
      {
        "command": "git-plus.cherryPick",
        "title": "Git Plus: Cherry Pick",
        "category": "Git Plus"
      },
      {
        "command": "git-plus.copyHash",
        "title": "Git Plus: Copy Hash",
        "category": "Git Plus"
      },
      {
        "command": "git-plus.revertCommit",
        "title": "Git Plus: Revert Commit",
        "category": "Git Plus"
      },
      {
        "command": "git-plus.resetToCommit",
        "title": "Git Plus: Reset to Commit",
        "category": "Git Plus"
      },
      {
        "command": "git-plus.checkoutBranch",
        "title": "Checkout Branch"
      },
      {
        "command": "git-plus.deleteBranch",
        "title": "Delete Branch"
      },
      {
        "command": "git-plus.refreshBranches",
        "title": "Refresh Branches",
        "icon": "$(refresh)"
      },
      {
        "command": "git-plus.createBranch",
        "title": "Create New Branch Here"
      },
      {
        "command": "git-plus.rebaseBranch",
        "title": "Rebase Current Branch onto This"
      },
      {
        "command": "git-plus.mergeBranch",
        "title": "Merge Branch into Current"
      }
    ]
  },
  "packageManager": "pnpm@10.30.0",
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./ && pnpm run bundle-webview",
    "bundle-webview": "esbuild src/webview/graph/index.tsx src/webview/commitDetails/index.tsx --bundle --outdir=out/webview --format=iife --target=es2020 --jsx=automatic",
    "watch": "tsc -watch -p ./",
    "watch:webview": "esbuild src/webview/graph/index.tsx src/webview/commitDetails/index.tsx --bundle --outdir=out/webview --format=iife --target=es2020 --jsx=automatic --watch",
    "pretest": "pnpm run compile",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.75.0",
    "esbuild": "^0.27.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
